<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Courses</title>

    <style>
        *{
            /* box-sizing: border-box; */
            margin: 0;
        }
        body{
            background-color: #0077B6;
        }
        h1{
            position: relative;
            left: 100px;
            /* top: 50px; */
            color: #F94144;
        }
        .all{
            background-color: #00B4D8;
            width: fit-content;
            display: flex;
            flex-direction: column;
            /* border: solid 2px black; */
            margin: auto;
            margin-top: 10px;
            margin-bottom: 20px;
        }
        .head, .file{
            display: grid;
            grid-template-columns: auto auto auto auto auto auto;
            /* gap: 20px; */
            /* margin: 10px; */
            /* border-right: solid 2px black ; */
        }
        .head>p{
            color: #F94144;
            font-weight: 700;
        }
        p{
            width: 100px;
            text-align: center;
            border: 5px inset black;
            color: #343A40;
        }
        a{
            position: relative;
            margin-top: 10px;
            padding: 2px 10px;
            top: 50%;
            left: 40%;
            transform: translate(-50%,-50%);
            text-decoration: none;
            font-size: 30px;
            border: solid 3px black;
            color: black;
            border-radius: 100px;
        }
    </style>

</head>
<body>
    <h1>Courses list</h1>
    <div class="all">
        <div class="head">
            <p>name</p>
            <p>code</p>
            <p>Hours</p>
        </div>

        <% courses.forEach(function (el)  { %>
            <div class="file">
                <p><%= el.name %></p>
                <p><%= el.code %></p>
                <p><%= el.numberOfHours %></p>
            </div>
        <% }); %>
    </div>             
    <a href="/menu">back</a>

</body>
</html>